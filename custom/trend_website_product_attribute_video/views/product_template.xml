<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_video_url" model="ir.ui.view">
            <field name="name">product.template.video.url</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="website_sale.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='website_ribbon_id']" position="after">
                    <field name="video_url"/>
                    <field name="video_code" invisible="1"/>
                </xpath>

            </field>
        </record>


        <record id="product_template_layout_plan" model="ir.ui.view">
            <field name="name">product.template.layout.plan</field>
            <field name="model">product.template</field>
            <field name="inherit_id"  ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='group_general']" position="inside">
                    <field name="layout_plan_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>