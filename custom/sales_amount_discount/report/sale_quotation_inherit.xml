<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_order_invoice" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-set='current_subtotal']" position="after">
                <t t-set="sequence" t-value="1"/>
            </xpath>
            <xpath expr="//th[@name='th_priceunit']" position="after">
                <th name="th_digit_discount" class="text-end">Discount</th>
                <th name="th_full_discount" class="text-end">Disc %</th>
            </xpath>
            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_sequence" class="text-start">Seq</th>
            </xpath>
            <xpath expr="//td[@name='td_priceunit']" position="after">
                <td name="td_digit_discount" class="text-end">
                    <span t-field="line.discount_amount"/>
                </td>
                <td name="td_full_discount" class="text-end">
                    <span t-field="line.full_discount"/>
                </td>
            </xpath>
            <xpath expr="//td[@name='td_name']" position="before">
                <td name="td_seq">
                    <span t-out="sequence"/>
                    <t t-set="sequence" t-value="sequence + 1"/>
                </td>
            </xpath>
            <xpath expr="//div[@id='total']" position="replace">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal">
                                <td>
                                    <strong>Total</strong>
                                </td>

                                <td class="text-end">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>

                            <tr class="border-black o_subtotal">
                                <td>
                                    <strong></strong>
                                </td>

                                <td class="text-end">
                                    <span t-field="doc.amount_total_words_english"/>
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="report_invoice_with_payments_inherit" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-set='current_subtotal']" position="after">
                <t t-set="sequence" t-value="1"/>
            </xpath>
            <xpath expr="//th[@name='th_description']" position="before">
                <th name="th_sequence" class="text-start">Seq</th>
            </xpath>
            <xpath expr="//td[@name='account_invoice_line_name']" position="before">
                <td name="td_seq">
                    <span t-out="sequence"/>
                    <t t-set="sequence" t-value="sequence + 1"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>