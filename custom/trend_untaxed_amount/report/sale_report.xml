<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="sale_order_untaxed_amount" inherit_id="sale.report_saleorder_document">
            <xpath expr="//th[@name='th_taxes']" position="after">
                <th name="th_untaxed_amount" class="text-end">Untaxed Amount</th>
            </xpath>
            <xpath expr="//td[@name='td_taxes']" position="after">
                <td name="td_untaxed_amount" class="text-end">
                    <span t-field="line.untaxed_amount"/>
                </td>
            </xpath>
        </template>

    </data>
</odoo>